{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "alwaysStrict": true,
    "pretty": false,
    "module": "CommonJS",
    "target": "ES2019",
    "lib": ["DOM", "ES6", "ES2017"],
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_nodules"]
}
